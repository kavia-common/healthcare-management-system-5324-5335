# MongoDB environment example for Healthcare Management System

# Connection URL (include credentials and authSource if authentication is enabled)
# Example with credentials:
# MONGODB_URL="mongodb://appuser:dbuser123@localhost:5000"
# Example without credentials:
# MONGODB_URL="mongodb://localhost:5000"
MONGODB_URL="mongodb://appuser:dbuser123@localhost:5000"

# Database name
MONGODB_DB="myapp"

# Port (for reference; the URL is the source of truth)
MONGODB_PORT=5000

# Admin/App user credentials (if used)
MONGODB_USER="appuser"
MONGODB_PASSWORD="dbuser123"

# Enable seeding (idempotent): set to "true" to enable
DB_SEED=false
